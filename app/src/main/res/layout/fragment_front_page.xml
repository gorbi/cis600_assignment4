<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_front_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="3">

    <Button
        android:background="@drawable/aboutme"
        android:id="@+id/button_about_me"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:onClick="onClickAboutMe"
        android:textAllCaps="false"
        android:layout_weight="1" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:background="@drawable/task"
        android:id="@+id/button_task_2"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:onClick="onClickTask1"
        android:textAllCaps="false"
        android:layout_weight="1" />

</LinearLayout>
